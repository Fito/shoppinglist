<div class='group'>
  <h1><%= @group.name %><%= button_tag "Add Store", {:class => 'add-store btn btn-success'}%></h1>
  <div class='uncategorized'>
    <h3>Uncategorized items<%= button_tag "+", {:class => 'add-item btn btn-success'}%></h3>
    <% @group.items.each do |item| %>
      <% if !item.store %>
        <div class='item' id='<%= item.id %>'>
          <h5><%= item.name %></h5>
          <%= button_tag "More info", {:class => 'more-info btn btn-info'} %>
          <%= button_tag "Done", {:class => 'done btn btn-success'} %>
          <%= button_tag "Delete", {:class => 'delete btn btn-danger'}%>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class='stores'>
    <% @group.stores.each do |store| %>
      <div class='store'>
        <h3><%= store.name %><%= button_tag "+", {:class => 'add-item btn btn-success'}%></h3>
        <% store.items.each do |item| %>
        <div class='item' id='<%= item.id %>'>
            <h5><%= item.name %></h5>
            <%= button_tag "More info", {:class => 'more-info btn btn-info'} %>
            <%= button_tag "Done", {:class => 'done btn btn-success'} %>
            <%= button_tag "Delete", {:class => 'delete btn btn-danger'} %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class='warning-message'>
    <p>Are you sure?</p>
    <button class='warning-yes btn btn-danger'>Yes</button>
    <button class='warning-cancel btn'>Cancel</button>
  </div>
</div>